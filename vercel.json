{
  "version": 2,
  "builds": [
    {
      "src": "api/telegram.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["node_modules/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/telegram",
      "dest": "/api/telegram.js",
      "methods": ["POST"]
    },
    {
      "src": "/",
      "dest": "/api/telegram.js",
      "methods": ["GET"]
    }
  ]
}